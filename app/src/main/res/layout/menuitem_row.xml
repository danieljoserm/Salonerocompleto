<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondos">


    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"

        android:layout_width="match_parent"
        android:layout_height="100dp"
        card_view:cardCornerRadius="3dp"

        android:layout_marginTop="9dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        card_view:cardElevation="0.01dp"
        android:layout_marginBottom="0dp"



        android:background="@color/texto">





        <LinearLayout
            android:id="@+id/top_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/texto"
            android:orientation="horizontal">



            <com.android.volley.toolbox.NetworkImageView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:id="@+id/imagenPost"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"

                android:scaleType="centerCrop" />

            <Button
                android:layout_width="51dp"
                android:layout_height="wrap_content"
                android:text="+"
                android:id="@+id/buton_mas_menuitem" />


            <LinearLayout

            android:orientation="vertical"
            android:layout_width="127dp"
            android:layout_height="match_parent"
            >


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre"
                android:id="@+id/Nombremenuitem"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:layout_width="86dp"
                android:layout_height="wrap_content"
                android:text="Precio"
                android:id="@+id/Preciomenuitem"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:text="Cantidad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/Cantidadmenuitem"
                android:layout_gravity="center_horizontal" />



        </LinearLayout>

            <Button
                android:layout_width="51dp"
                android:layout_height="wrap_content"
                android:text="-"
                android:id="@+id/buton_menos_menuitem" />














        </LinearLayout>




    </android.support.v7.widget.CardView>


</LinearLayout>